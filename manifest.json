
{
  "manifest_version": 3,
  "name": "〆をまでだよ🐼に変換する拡張機能",
  "version": "1.0",
  "description": "ページ内の「〆」を「までだよ🐼」に置き換えます",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "〆変換",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
